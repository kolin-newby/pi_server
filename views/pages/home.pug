//- home.pug
include ../partials/header.pug

body
    div.container
        div.jumbotron
            h1 Traffic on Campus
        div.page
            h3 Locations
            br
            if data
                each location in data
                    p
                        - status = getStatus(location.volume);
                        a(href="location.html") #{location.name}
                        | : &nbsp
                        span(class=status.class) #{status.message}

    include ../partials/footer.pug